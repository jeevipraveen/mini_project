<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="50dp"
            android:fontFamily="@font/archivo_black"
            android:text="S."
            android:textColor="#f05448"
            android:textSize="34sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="20dp"
            android:textColor="@color/black"
            android:layout_marginEnd="30dp"
            android:fontFamily="sans-serif-medium"
            android:text="First of the few steps to set you up with a Bank Account"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:layout_marginTop="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="pan number"
            android:textAllCaps="true"
            android:layout_marginStart="30dp"/>

    <LinearLayout
        android:id="@+id/cuntry_select"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="5dp"
        android:padding="4dp"
        android:background="@drawable/login_card"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/pan_number"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:maxLength="10"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:inputType="textCapWords"
            android:textAllCaps="true"
            android:layout_marginBottom="10dp"
            android:background="@android:color/transparent"/>

    </LinearLayout>

        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="birthdate"
            android:textAllCaps="true"
            android:layout_marginStart="30dp"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="3dp">


           <com.google.android.material.textfield.TextInputLayout
               android:layout_weight="1"
               style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
               android:layout_width="match_parent"
               android:layout_marginEnd="40dp"
               android:layout_height="wrap_content">
               <com.google.android.material.textfield.TextInputEditText
                   android:id="@+id/day"
                   android:layout_width="match_parent"
                   android:inputType="number"
                   android:maxLength="2"
                   android:layout_height="wrap_content"/>

           </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_weight="1"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_marginEnd="30dp"
                android:maxLength="2"
                android:layout_height="wrap_content">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/month"
                    android:layout_width="match_parent"

                    android:inputType="number"
                    android:layout_height="wrap_content"/>

            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_weight="1"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_marginStart="10dp"
                android:layout_height="wrap_content">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/year"
                    android:layout_width="match_parent"
                    android:inputType="number"
                    android:maxLength="4"
                    android:layout_height="wrap_content"/>

            </com.google.android.material.textfield.TextInputLayout>




        </LinearLayout>






    </LinearLayout>

    <LinearLayout
        android:layout_gravity="bottom"
        android:gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        tools:ignore="MissingConstraints">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#808080"
            android:text="Providing PAN &amp; Date of Birth helps us find and fetch your KYC from central registry by the"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#808080"
            android:text="Government of India."></TextView>
            <TextView
                android:layout_width="wrap_content"
                android:textSize="16sp"
                android:layout_height="wrap_content"
                android:textColor="#640dde"
                android:text="Learn more"/>
        </LinearLayout>

        <TextView
            android:id="@+id/next"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_marginBottom="5dp"
            android:background="@drawable/button_module"
            android:padding="5dp"
            android:textSize="18sp"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="Next"/>

        <TextView
            android:id="@+id/close"
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:textColor="#640dde"
            android:padding="5dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="I don't have a PAN "/>




    </LinearLayout>




</FrameLayout>